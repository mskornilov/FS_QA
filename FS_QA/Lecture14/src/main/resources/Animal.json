{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "Animal",
  "title": "Animal",
  "description": "Animal of some type",
  "required": [ "animal_type", "name", "age", "has_tail", "colors", "friends" ],
  "type": "object",
  "properties": {
    "animal_type": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "age": {
      "type": "integer",
      "minimum": 0
    },
    "has_tail": {
      "type": "boolean"
    },
    "colors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "friends": {
      "$ref": "friends.json"
    }
  }
}